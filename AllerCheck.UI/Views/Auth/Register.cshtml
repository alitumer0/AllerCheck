@model RegisterDto

@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Kayıt Ol</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Register" method="post">
                        @Html.AntiForgeryToken()
                        
                        <div class="form-group mb-3">
                            <label asp-for="UserName">Ad</label>
                            <input asp-for="UserName" class="form-control" placeholder="Adınız" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="UserSurname">Soyad</label>
                            <input asp-for="UserSurname" class="form-control" placeholder="Soyadınız" />
                            <span asp-validation-for="UserSurname" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="MailAdress">E-posta</label>
                            <input asp-for="MailAdress" type="email" class="form-control" placeholder="E-posta adresiniz" />
                            <span asp-validation-for="MailAdress" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="UserPassword">Şifre</label>
                            <input asp-for="UserPassword" type="password" class="form-control" placeholder="Şifreniz" />
                            <span asp-validation-for="UserPassword" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="UserPasswordConfirm">Şifre Tekrar</label>
                            <input asp-for="UserPasswordConfirm" type="password" class="form-control" placeholder="Şifrenizi tekrar giriniz" />
                            <span asp-validation-for="UserPasswordConfirm" class="text-danger"></span>
                        </div>

                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger">
                                <div asp-validation-summary="All" class="text-danger"></div>
                            </div>
                        }

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Kayıt Ol</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <p class="mb-0">Zaten hesabınız var mı? <a asp-action="Login">Giriş Yap</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 
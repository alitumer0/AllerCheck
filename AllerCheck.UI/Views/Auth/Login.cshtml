@model LoginDto

@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Giriş Yap</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Login" method="post">
                        @Html.AntiForgeryToken()
                        
                        <div class="form-group mb-3">
                            <label asp-for="Email">E-posta</label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="E-posta adresiniz" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="UserPassword">Şifre</label>
                            <input asp-for="UserPassword" type="password" class="form-control" placeholder="Şifreniz" />
                            <span asp-validation-for="UserPassword" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <div class="custom-control custom-checkbox">
                                <input asp-for="RememberMe" type="checkbox" class="custom-control-input" />
                                <label asp-for="RememberMe" class="custom-control-label">Beni Hatırla</label>
                            </div>
                        </div>

                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger">
                                <div asp-validation-summary="All" class="text-danger"></div>
                            </div>
                        }

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Giriş Yap</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <p class="mb-0">Hesabınız yok mu? <a asp-action="Register">Kayıt Ol</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 
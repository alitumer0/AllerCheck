@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="container mt-4">
    <div class="row align-items-center mb-5">
        <div class="col-md-6">
            <h1 class="display-4 mb-4">AllerCheck'e Hoş Geldiniz</h1>
            <p class="lead">
                Gıda alerjilerinizi yönetmenin en kolay yolu. Ürünlerin içeriklerini kontrol edin, 
                favori listelerinizi oluşturun ve alerjik olduğunuz içerikleri kara listenize ekleyin.
            </p>
            @if (!User.Identity.IsAuthenticated)
            {
                <div class="mt-4">
                    <a asp-controller="Auth" asp-action="Register" class="btn btn-primary btn-lg me-3">
                        <i class="bi bi-person-plus"></i> Hemen Üye Ol
                    </a>
                    <a asp-controller="Auth" asp-action="Login" class="btn btn-outline-primary btn-lg">
                        <i class="bi bi-box-arrow-in-right"></i> Giriş Yap
                    </a>
                </div>
            }
            else
            {
                <div class="mt-4">
                    <a asp-controller="Home" asp-action="Products" class="btn btn-success btn-lg me-3">
                        <i class="bi bi-search"></i> Ürünleri İncele
                    </a>
                    <a asp-controller="Account" asp-action="FavoriteLists" class="btn btn-outline-success btn-lg">
                        <i class="bi bi-heart"></i> Favorilerim
                    </a>
                </div>
            }
        </div>
        <div class="col-md-6 text-center">
            <img src="/images/allercheck-hero.svg" alt="AllerCheck" class="img-fluid" style="max-width: 400px;" onerror="this.onerror=null; this.src='/images/allercheck-hero.png';" />
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-12 text-center mb-4">
            <h2>Özelliklerimiz</h2>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-search text-primary" style="font-size: 2.5rem;"></i>
                    <h3 class="h5 mt-3">Ürün İçerik Kontrolü</h3>
                    <p class="text-muted">
                        Binlerce ürünün içerik bilgisine anında erişin ve alerjik reaksiyon 
                        riskini önceden öğrenin.
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-heart text-danger" style="font-size: 2.5rem;"></i>
                    <h3 class="h5 mt-3">Favori Listesi</h3>
                    <p class="text-muted">
                        Güvenle tüketebileceğiniz ürünleri favori listenize ekleyin ve 
                        kolayca takip edin.
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-shield-check text-success" style="font-size: 2.5rem;"></i>
                    <h3 class="h5 mt-3">Kara Liste Koruması</h3>
                    <p class="text-muted">
                        Alerjik olduğunuz içerikleri kara listenize ekleyin ve riskli 
                        ürünleri önceden tespit edin.
                    </p>
                </div>
            </div>
        </div>
    </div>

    @if (!User.Identity.IsAuthenticated)
    {
        <div class="row mt-5">
            <div class="col-12">
                <div class="card bg-primary text-white">
                    <div class="card-body text-center py-5">
                        <h3>Hemen Üye Olun</h3>
                        <p class="lead mb-4">
                            AllerCheck'in tüm özelliklerinden ücretsiz yararlanmaya başlayın.
                        </p>
                        <a asp-controller="Auth" asp-action="Register" class="btn btn-light btn-lg">
                            <i class="bi bi-person-plus"></i> Üye Ol
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Animasyonlar veya diğer etkileşimler buraya eklenebilir
        });
    </script>
}

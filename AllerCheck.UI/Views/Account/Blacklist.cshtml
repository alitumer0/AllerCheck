@model List<AllerCheck.API.DTOs.BlackListDTO.BlackListDto>

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-x-circle"></i> Kara Listem
                    </h5>
                </div>
                <div class="card-body">
                    @if (!Model.Any())
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> Kara listenizde henüz içerik bulunmamaktadır.
                        </div>
                    }
                    else
                    {
                        <div class="list-group">
                            @foreach (var item in Model)
                            {
                                <div class="list-group-item">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-1">@item.ContentName</h6>
                                            <small class="text-muted">
                                                <i class="bi bi-exclamation-triangle"></i>                                               
                                            </small>
                                        </div>
                                        <form asp-action="RemoveFromBlacklist" method="post">
                                            <input type="hidden" name="blackListId" value="@item.BlackListId" />
                                            <button type="submit" class="btn btn-outline-danger btn-sm">
                                                <i class="bi bi-trash"></i> Listeden Çıkar
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function removeFromBlacklist(contentId) {
            if (confirm('Bu içeriği kara listenizden kaldırmak istediğinize emin misiniz?')) {
                $.post('/Account/RemoveFromBlacklist', { contentId: contentId })
                    .done(function (result) {
                        if (result.success) {
                            $('#content-' + contentId).fadeOut(300, function() { $(this).remove(); });
                        } else {
                            alert(result.message || 'Bir hata oluştu.');
                        }
                    })
                    .fail(function () {
                        alert('İşlem sırasında bir hata oluştu.');
                    });
            }
        }
    </script>
} 